<div class="container">
  <h3>Cocktail Details</h3>
  <div class="row">
    <div class="col">
      <p>Cocktail Name: <%= @cocktail.name %></p><br>
      <% @doses.each do |dose| %>
      <!-- Ingredients list -->
      <%= dose.description %> - <%= dose.ingredient.name %><br>
      <% end %>
      <!-- Add in ingredient -->
      <%= link_to "Add an Ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-flat"%>
    </div>
    <div class="col">
      <img src="https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80" class="rounded float-right img-thumbnail" alt="Card image cap">
    </div>
  </div>
</div>
